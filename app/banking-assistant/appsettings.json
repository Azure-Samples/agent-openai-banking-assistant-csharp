{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "${AZURE_TENANT_ID}",
    "ClientId": "${AZURE_CLIENT_ID:system-managed-identity}",
    "CallbackPath": "/signin-oidc",
    "Scopes": "access_as_user"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "Active": "${APPLICATION_INSIGHTS_ACTIVE}",
    "ConnectionString": "${APPLICATION_INSIGHTS_STRING}"
  },
  "AzureOpenAI": {
    "Endpoint": "${AZURE_OPENAI_ENDPOINT}",
    "ApiKey": "${AZURE_OPENAI_APIKEY}",
    "Deployment": "${AZURE_OPENAI_CHATGPT_DEPLOYMENT}"
  },
  "DocumentIntelligence": {
    "Endpoint": "${AZURE_DOCUMENT_INTELLIGENCE_SERVICE_ENDPOINT}",
    "ApiKey": "${AZURE_DOCUMENT_INTELLIGENCE_SERVICE_APIKEY}"
  },
  "Storage": {
    "AccountName": "${AZURE_STORAGE_ACCOUNT}",
    "ContainerName": "${AZURE_STORAGE_CONTAINER}"
  },
  "BackendAPIs": {
    "TransactionsApiUrl": "${TRANSACTIONS_API_SERVER_URL}",
    "AccountsApiUrl": "${ACCOUNTS_API_SERVER_URL}",
    "PaymentsApiUrl": "${PAYMENTS_API_SERVER_URL}"
  },
  "MicrosoftGraph": {
    "BaseUrl": "https://graph.microsoft.com/v1.0",
    "Scopes": "user.read"
  }
}